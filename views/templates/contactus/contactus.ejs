<%- include("../../partials/head")%>
<body>
 <%- include("../../partials/navbar")%>

  <div class="bg-image"></div>
  
  <!-- Contact us div-->
  <div class="contact">
      <div class="contact_div" id="contact">
          <h3>Get in touch</h3>
          <p>For any resources or issues.. </p>
          <div class="wrapper">
              <form class="input_part" action="/contactus" method="POST" > 
                  <% if(!currentLoggedIn) {%> 
                    <div class="mb-3 lebelform">
                      <label for="exampleFormControlInput1" class="form-label">Name:</label>
                      <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="name" name="name">
                    </div>
                  <div class="mb-3 lebelform">
                      <label for="exampleFormControlInput2" class="form-label">Email:</label>
                      <input type="email" class="form-control" id="exampleFormControlInput2" placeholder="email" name="email">
                    </div>
                    <% } %>
                    <div class="mb-3 lebelform">
                      <label for="exampleFormControlTextarea1" class="form-label">Message:</label>
                      <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="query"></textarea>
                    </div>
                    <button class="btn btn-outline-success">Submit</button>
              </form>
          </div>
      </div>
  </div>
  <!-- End of contact div -->
  <%- include("../../partials/footer")%>
  <script src="/js/script.js"></script>
</body>